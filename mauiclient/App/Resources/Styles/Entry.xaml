<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:v="clr-namespace:mauiclient.Resources.Views" >

    <Style TargetType="Border" x:Key="EntryBorder">
        <Setter Property="Stroke" Value="{ StaticResource OffBlack }" />
        <Setter Property="StrokeThickness" Value="2.5" />
        <Setter Property="BackgroundColor" Value="{ StaticResource White }" />
    </Style>

    <Style TargetType="v:BorderlessEntry">
        <Setter Property="Margin" Value="8, 6" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="RedHatTextRegular" />
    </Style>
</ResourceDictionary>