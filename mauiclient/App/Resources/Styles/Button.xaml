<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Button" x:Key="ButtonBaseStyle">
        <Setter Property="TextColor" Value="{ StaticResource White }" />
        <Setter Property="FontFamily" Value="RedHatTextMedium" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <Style TargetType="Button" BasedOn="{ StaticResource ButtonBaseStyle }" x:Key="ButtonBlack">
        <Setter Property="BackgroundColor" Value="{ StaticResource OffBlack }"/>
    </Style>

    <Style TargetType="Button" BasedOn="{ StaticResource ButtonBaseStyle }" x:Key="ButtonBlue">
        <Setter Property="BackgroundColor" Value="{ StaticResource Blue }"/>
    </Style>

    <Style TargetType="Button" BasedOn="{ StaticResource ButtonBaseStyle }" x:Key="ButtonRed">
        <Setter Property="BackgroundColor" Value="{ StaticResource Red }" />
    </Style>
</ResourceDictionary>